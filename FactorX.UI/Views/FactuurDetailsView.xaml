<StackPanel Grid.Row="6" Grid.ColumnSpan="2">
    <TextBlock Text="Betalingsinformatie" FontWeight="Bold" Margin="0,10,0,5"/>
    <TextBlock Text="{Binding HuidigeFactuur.BetalingsStatus}"/>
    <TextBlock Text="{Binding HuidigeFactuur.BetaaldBedrag, StringFormat='Betaald bedrag: {0:C}'}"/>
    <TextBlock Text="{Binding HuidigeFactuur.OpenstaandBedrag, StringFormat='Openstaand bedrag: {0:C}'}"/>
    <TextBlock Text="{Binding HuidigeFactuur.BetaaldOp, StringFormat='Betaald op: {0:d}'}"/>
    <Button Content="Registreer Betaling" Command="{Binding RegistreerBetalingCommand}" 
            CommandParameter="{Binding HuidigeFactuur}" Margin="0,5,0,0"/>
</StackPanel>
